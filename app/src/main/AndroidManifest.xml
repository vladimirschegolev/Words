<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.gmail.randzjx.words">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".activity.ActivityMain">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.ActivityReader">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:mimeType="application/fb2"
                    android:host="*"
                    android:pathPattern=".*\\.fb2"
                    android:scheme="file" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.ActivityPreferences" />
        <activity android:name=".activity.ActivityWordEditPager" />

        <provider
            android:name="com.gmail.randzjx.words.database.WordsContentProvider"
            android:authorities="com.gmail.randzjx.words.database.WordsContentProvider"
            android:exported="false" />
    </application>

</manifest>